{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue",
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "tabBar": {
    "list": [
      {
        "text": "打卡",
        "pagePath": "pages/index/index",
        "iconPath": "./static/images/tabbar/icon-sign.png",
        "selectedIconPath": "./static/images/tabbar/icon-sign-active.png"
      },
      {
        "text": "记录",
        "pagePath": "pages/record/index",
        "iconPath": "./static/images/tabbar/icon-calendar.png",
        "selectedIconPath": "./static/images/tabbar/icon-calendar-active.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/mine/index",
        "iconPath": "./static/images/tabbar/icon-mine.png",
        "selectedIconPath": "./static/images/tabbar/icon-mine-active.png"
      }
    ],
    "color": "#555",
    "selectedColor": "#8816ec",
    "backgroundColor": "#ffffff"
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "打卡"
      }
    },
    {
      "path": "pages/record/index",
      "style": {
        "navigationBarTitleText": "打卡记录"
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/secondPage/index",
      "style": {
        "navigationBarTitleText": "二级页"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "陈二皮",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
